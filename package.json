{
  "name": "pmd-cpd",
  "displayName": "PMD CPD",
  "description": "Explore and highlight PMD copy paste detections",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/nwcm/vscode-pmd-cpd"
  },
  "publisher": "nwcm",
  "license": "MIT",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pmd-cpd.showDuplicates",
        "title": "Show Duplicate Code",
        "category": "Code Analysis-PMD"
      },
      {
        "command": "pmd-cpd.hideDuplicates",
        "title": "Hide Duplicate Code",
        "category": "Code Analysis-PMD"
      },
      {
        "command": "pmd-cpd.refreshDuplicates",
        "title": "Refresh Duplicates",
        "category": "Code Analysis-PMD"
      },
      {
        "command": "pmd-cpd.scanForDuplicates",
        "title": "Scan Source for Duplicates",
        "category": "Code Analysis-PMD"
      }
    ],
    "views": {
      "pmd-cpd": [
        {
          "id": "pmd-cpd.DuplicateCode",
          "name": "Duplicate Code"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pmd-cpd",
          "title": "Copy Paste Detection",
          "icon": "$(output-view-icon)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "cpd.DuplicateCode",
        "contents": "No duplicate files found or not processed yet."
      }
    ],
    "colors": [
      {
        "id": "duplicateStatus.critical",
        "description": "Background highlight color to make large sections of duplicated code obvious.",
        "defaults": {
          "dark": "#fa4d5620",
          "light": "#da1e2820"
        }
      },
      {
        "id": "duplicateStatus.major",
        "description": "Background highlight color to make medium sections of duplicated code obvious.",
        "defaults": {
          "dark": "#ff832b20",
          "light": "#ff832b20"
        }
      },
      {
        "id": "duplicateStatus.minor",
        "description": "Background highlight color to make small sections of duplicated code obvious.",
        "defaults": {
          "dark": "#f1c21b20",
          "light": "#f1c21b20"
        }
      }
    ],
    "configuration": {
      "title": "PMD CPD",
      "properties": {
        "pmd-cpd.minimumDuplicateTokens": {
          "type": "number",
          "default": 100,
          "description": "The minimum number of tokens to consider a duplicate."
        },
        "pmd-cpd.minorIssueTokenThreshold": {
          "type": "number",
          "default": 300,
          "description": "The token threshold to flag minor issues. Anything below this will be highlighted as minor."
        },
        "pmd-cpd.majorIssueTokenThreshold": {
          "type": "number",
          "default": 500,
          "description": "The token threshold to flag major issues. Anything below this but above minor will be highlighted as major. Anything over this is critical."
        },
        "pmd-cpd.onStartBehavior": {
          "type": "string",
          "enum": [
            "Show",
            "Hide"
          ],
          "default": "Hide",
          "description": "Specifies on load of extension to show or hide highlighting duplicate code."
        },
        "pmd-cpd.language": {
          "type": "array",
          "items": {
            "type": "string",
            "uniqueItems": true,
            "enum": [
              "apex",
              "coco",
              "cpp",
              "cs",
              "dart",
              "ecmascript",
              "fortran",
              "gherkin",
              "go",
              "groovy",
              "html",
              "java",
              "jsp",
              "julia",
              "kotlin",
              "lua",
              "matlab",
              "modelica",
              "objectivec",
              "perl",
              "php",
              "plsql",
              "pom",
              "python",
              "ruby",
              "scala",
              "swift",
              "tsql",
              "typescript",
              "velocity",
              "visualforce",
              "wsdl",
              "xml",
              "xsl"
            ]
          },
          "default": [
            "java"
          ],
          "description": "Specifies PMD CPD language. See https://pmd.github.io/pmd/pmd_userdocs_cpd.html#supported-languages"
        },
        "pmd-cpd.sourceDirectory": {
          "type": "string",
          "default": "",
          "description": "Specifies the source folder to scan.",
          "examples": [
            "src/"
          ]
        }
      }
    }
  },
  "scripts": {
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "22.x",
    "@types/xml2js": "^0.4.14",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.9.1",
    "glob": "^11.0.0",
    "globals": "^15.9.0",
    "mocha": "^10.7.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.3.0"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.36",
    "@types/vscode": "^1.91.0",
    "xml2js": "^0.6.2"
  },
  "vsce": {
    "dependencies": true,
    "yarn": false
  }
}
